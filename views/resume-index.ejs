<%- include ('./partials/header.ejs') %>

<div class="container" style="margin-top: 50px;" >
    
<div class="table-wrapper">
        <div class="card"> 
            <div class="card-header" style="background-color:  rgb(222, 240, 241);">
                <ul class="nav nav-pills w-100">
                    <li class="nav-pill active">
                        <a class="nav-link"><h3>Resume</h3></a>
                    </li>
                    <li class="nav-pill ml-auto">
                        <a class="nav-link active" href="/addresume">Add Resume Item</a>
                    </li>
                </ul>
            </div>
        
        <% if (resumes.length > 0) {%>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Career</th>
                    <th scope="col">Date</th>
                    <th scope="col">Title</th>
                    <th scope="col">Description</th>
                    <th width="200px">Action</th>
                </tr>
            </thead>
            <tbody>
                <% resumes.forEach((resume, index) => { %>
                <tr>
                    <th scope="row"><%= resume.id %></th>
                    <td><%= resume.career %></td>
                    <td><%= resume.date %></td>
                    <td><%= resume.title %></td>
                    <td><%= resume.description%></td>
    
                    <!-- Update and Delete Resume Submissions -->
                    <td>
                        <a class="btn btn-success edit" href="/editresume/<%= resume.id %>" target="_blank" rel="noopener">Edit</a>
                        <a class= "btn btn-danger delete"  href="/deleteresume/<%= resume.id %>" >Delete</a>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
        <% } else { %>
        <p class="text-center">No resume found! To add resume items click Add Resume Item</p>
        <% } %>
    </div>
    </div>
</div><br><br><br><br><br><br><br><br><br><br><br><br>


<%- include ('./partials/footer.ejs') %>