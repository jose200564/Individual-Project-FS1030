<%- include ('./partials/header.ejs') %>

<div class="container" style="margin-top: 50px;">

    <div class="table-wrapper container-md">
        <div class="card"> 
            <div class="card-header" style="background-color:  rgb(222, 240, 241);">
                <ul class="nav nav-pills w-100">
                    <li class="nav-pill active">
                        <a class="nav-link"><h3>Portfolio</h3></a>
                    </li>
                    <li class="nav-pill ml-auto">
                        <a class="nav-link active" href="/addportfolio">Add Portolio Item</a>
                    </li>
                </ul>
            </div>
        
    
        <% if (portfolios.length > 0) {%>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Caption</th>
                    <th scope="col">Description</th>
                    <th width="200px">Action</th>
    
                </tr>
            </thead>
            <tbody>
                <% portfolios.forEach((portfolio, index) => { %>
                <tr>
                    <th scope="row"><%= portfolio.id %></th>
                    <td><%= portfolio.caption %></td>
                    <td><%= portfolio.description%></td>
    
    
                    <!-- Update and Delete Submissions -->
                    <td>
                        <a class="btn btn-success edit" href="/editportfolio/<%= portfolio.id %>" target="_blank" rel="noopener">Edit</a>
                            
                        <a class="btn btn-danger delete" href="/deleteportfolio/<%= portfolio.id %>" >Delete</a>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
        <% } else { %>
        <p class="text-center">No portfolio found! To add items to portfolio click Add Portfolio Item</p>
        <% } %>
    </div>
    </div>
</div><br><br><br><br><br><br><br><br><br><br><br><br>
<%- include ('./partials/footer.ejs') %>